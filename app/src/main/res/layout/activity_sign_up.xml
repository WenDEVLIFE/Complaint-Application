<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3E6680"
        tools:context=".SignUp">

    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.134" />

    <EditText
            android:layout_width="@dimen/_264sdp"
            android:layout_height="@dimen/_62sdp"
            android:drawableLeft="@drawable/gmail"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginBottom="476dp"
            app:layout_constraintHorizontal_bias="0.468" />

    <EditText
            android:layout_width="@dimen/_264sdp"
            android:layout_height="@dimen/_62sdp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/editTextTextPassword2"
            app:layout_constraintEnd_toEndOf="parent"
            android:drawableLeft="@drawable/password_12795740"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="368dp"
            app:layout_constraintHorizontal_bias="0.423" />

    <Button
            android:text="Sign Up"
            android:layout_width="@dimen/_249sdp"
            android:layout_height="@dimen/_53sdp"
            android:id="@+id/button_register"
            android:background="@color/cerulean"
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp"
            app:layout_constraintHorizontal_bias="0.456" />

    <Button
            android:text="Go Back"
            android:layout_width="@dimen/_249sdp"
            android:layout_height="@dimen/_53sdp"
            android:id="@+id/buttonback"
            android:textSize="@dimen/_30sdp"
            android:background="@color/folly"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp"
            app:layout_constraintHorizontal_bias="0.45" />

    <CheckBox
            android:text="See Password"
            android:textColor="@color/white"
            android:layout_width="@dimen/_197sdp"
            android:layout_height="@dimen/_54sdp"
            android:id="@+id/checkBox2"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.189"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="284dp" />

    <ImageView
            android:layout_width="@dimen/_53sdp"
            android:layout_height="@dimen/_61sdp"
            app:srcCompat="@drawable/adduser_11695593"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>