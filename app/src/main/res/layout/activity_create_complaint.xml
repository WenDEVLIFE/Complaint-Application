<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3E6680"
        tools:context=".CreateComplaint">

    <!--multiline text input-->

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_239sdp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="60dp"
            android:textColorHint="@color/white"
            android:id="@+id/textInputLayout1"
            android:layout_marginBottom="456dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your complaint here"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:id="@+id/complaintInput"
                android:gravity="top|start" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_239sdp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="316dp"
            android:id="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/nameInput"
                android:hint="Type your name here"
                android:textColorHint="@color/white"
                android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:text="Complaint Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/Title"
            android:textSize="@dimen/_30sdp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.404" />

    <Button
            android:text="Send"
            android:layout_width="160dp"
            android:layout_height="49dp"
            android:textColor="@color/white"
            android:id="@+id/send_data"
            android:textSize="@dimen/_20sdp"
            android:background="@color/cerulean"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            android:layout_marginBottom="200dp" />

    <Button
            android:text="Go back "
            android:layout_width="160dp"
            android:layout_height="49dp"
            android:textColor="@color/white"
            android:background="@color/folly"
            android:id="@+id/back"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.426"
            android:layout_marginBottom="104dp" />

</androidx.constraintlayout.widget.ConstraintLayout>