<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3E6680"
        tools:context=".MainActivity">

    <TextView
            android:text="Complaints"
            android:layout_width="@dimen/_141sdp"
            android:layout_height="@dimen/_29sdp"
            android:id="@+id/textView"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.066"
            app:layout_constraintHorizontal_bias="0.059" />

    <TextView
            android:text="Email:"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_32sdp"
            android:id="@+id/email"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.005"
            app:layout_constraintHorizontal_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/_304sdp"
            android:layout_height="@dimen/_495sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:id="@+id/recyclerView"
            app:layout_constraintHorizontal_bias="0.473" />

    <Button
            android:text="Logout"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_48sdp"
            android:textColor="@color/white"
            android:id="@+id/LogoutButton"
            android:textSize="@dimen/_20sdp"
            android:background="@color/cerulean"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView"
            app:layout_constraintHorizontal_bias="0.827"
            android:layout_marginBottom="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_51sdp"
            android:id="@+id/floatingActionButton"
            android:clickable="true"
            app:srcCompat="@drawable/plus"
            android:background="@color/folly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintVertical_bias="0.993"
            android:focusable="true"
            android:contentDescription="Add a new complaint" />


</androidx.constraintlayout.widget.ConstraintLayout>